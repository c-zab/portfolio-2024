---
import Layout from "../../layouts/Layout.astro";
import LanguageSwitcher from "../../components/language-switcher.astro";
import { getTranslation } from "../../utils/i18n";

const locale = "es";
const t = (key: string) => getTranslation(locale, key);
---

<Layout title={t("birthday.title")} variant="hb">
  <div id="confetti-container" class="fixed inset-0 pointer-events-none z-50"></div>
  <div
    class="min-h-screen w-full bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 relative overflow-hidden text-white"
  >
    <!-- BotÃ³n flotante para volver al inicio -->
    <div class="fixed bottom-4 right-4 z-50">
      <button
        id="back-to-portfolio"
        class="h-12 w-12 flex items-center justify-center rounded-full bg-slate-800/80 hover:bg-slate-700 text-slate-100 shadow-lg ring-1 ring-slate-600 backdrop-blur-md transition-colors"
        aria-label={t("birthday.backToPortfolio")}
        title={t("birthday.backToPortfolio")}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          class="h-5 w-5"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 10.5l9-7 9 7"></path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4.5 9.75V20a1.5 1.5 0 001.5 1.5H18a1.5 1.5 0 001.5-1.5V9.75"></path>
        </svg>
      </button>
    </div>
    <div class="absolute top-4 left-4 z-20">
      <LanguageSwitcher dark={true} />
    </div>
    <div
      class="absolute inset-0 pointer-events-none opacity-10 mix-blend-overlay"
      style="background-image: radial-gradient(rgba(255,255,255,.15) 1px, transparent 1px); background-size: 3px 3px;"
    >
    </div>

    <main class="relative mx-auto max-w-sm px-4 py-12">
      {/* Card */}
      <div class="relative rounded-2xl border border-slate-700 bg-slate-800/70 backdrop-blur-md shadow-xl">
        {/* luxe border accent */}
        <div class="absolute inset-0 rounded-2xl p-[1px]">
          <div class="h-full w-full rounded-2xl bg-gradient-to-br from-indigo-400/40 via-purple-400/40 to-pink-400/40">
          </div>
        </div>

        <section class="relative z-10 p-6 text-center">
          {/* Watermark age */}
          <div
            class="pointer-events-none absolute -top-10 -right-2 text-6xl font-serif font-semibold text-slate-600/40 select-none"
          >
            {t("birthday.age")}
          </div>

          <header class="space-y-1">
            <p class="tracking-[0.2em] uppercase text-xs text-slate-300 font-sans">{t("birthday.subtitle")}</p>
            <h1 class="font-serif text-2xl leading-tight text-white">
              {t("birthday.name")} cumple {t("birthday.age")}
            </h1>
            <div class="mx-auto mt-2 h-px w-16 bg-gradient-to-r from-transparent via-slate-400 to-transparent"></div>
          </header>

          <div class="mt-6 grid grid-cols-1 gap-4 font-sans text-slate-200">
            <div class="flex flex-col items-center">
              <span class="text-[20px] md:text-xs uppercase tracking-wide text-slate-300 font-medium"
                >{t("birthday.labels.dateTime")}</span
              >
              <span class="text-base mt-1">{t("birthday.date")} <br /> {t("birthday.time")}</span>
            </div>

            <div class="flex flex-col items-center">
              <span class="text-[13px] md:text-xs uppercase tracking-wide text-slate-300 font-medium"
                >{t("birthday.labels.place")}</span
              >
              <a
                href="https://maps.app.goo.gl/FtUQc9KTXLoCJbus5"
                target="_blank"
                class="mt-0.5 text-[15px] leading-snug text-sky-300 hover:text-sky-200 underline decoration-1 underline-offset-4 decoration-sky-400/60 hover:decoration-sky-300 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-sky-300/50 focus-visible:ring-offset-1 focus-visible:ring-offset-slate-800 rounded"
              >
                {t("birthday.place")}
              </a>
              <span class="mt-2 text-[10px] leading-relaxed text-slate-300/90 text-center max-w-xs">
                {t("birthday.descriptions.place")}
              </span>
            </div>

            <div class="flex flex-col items-center">
              <span class="text-[13px] md:text-xs uppercase tracking-wide text-slate-300 font-medium">
                {t("birthday.labels.food")}
              </span>
              <a
                href="https://www.instagram.com/reel/C-0B41wpiW_/"
                target="_blank"
                class="mt-1 text-base text-sky-300 hover:text-sky-200 underline decoration-2 underline-offset-4 decoration-sky-300/60 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-sky-400/60 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-800 rounded"
              >
                {t("birthday.food")}
              </a>
              <span class="mt-2 text-[10px] leading-relaxed text-slate-300/90 text-center max-w-xs">
                {t("birthday.descriptions.food")}
              </span>
            </div>
            <div class="flex flex-col items-center">
              <span class="text-[13px] md:text-xs uppercase tracking-wide text-slate-300 font-medium"
                >{t("birthday.labels.cake")}</span
              >
              <a
                href="https://www.instagram.com/reel/DMqrFHlykct/?igsh=bDZ1dDc1dmY1cG4w"
                target="_blank"
                class="mt-1 text-base text-sky-300 hover:text-sky-200 underline decoration-2 underline-offset-4 decoration-sky-300/60 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-sky-400/60 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-800 rounded"
              >
                {t("birthday.cake")}
              </a>
              <span class="mt-2 text-[10px] leading-relaxed text-slate-300/90 text-center max-w-xs">
                {t("birthday.descriptions.cake")}
              </span>
            </div>
            <div class="flex flex-col items-center">
              <span class="text-[13px] md:text-xs uppercase tracking-wide text-slate-300 font-medium"
                >{t("birthday.labels.activities")}</span
              >
              <span class="mt-1 text-base">{t("birthday.activities")}</span>
              <span class="mt-2 text-[10px] leading-relaxed text-slate-300/90 text-center max-w-xs">
                {t("birthday.descriptions.activities")}
              </span>
            </div>

            {
              t("birthday.rsvp") && (
                <div class="mt-4">
                  <a
                    href={t("birthday.rsvp")}
                    class="inline-flex items-center justify-center gap-2 rounded-full border border-green-500 bg-green-600 px-5 py-2 text-sm font-medium text-white transition hover:-translate-y-0.5 hover:shadow-lg hover:shadow-green-500/30"
                  >
                    <img src="/128px-WhatsApp.png" alt="WhatsApp" class="h-4 w-4" />
                    {t("birthday.labels.rsvp")}
                  </a>
                </div>
              )
            }

            {t("birthday.note") && <p class="mt-3 text-sm text-slate-300">{t("birthday.note")}</p>}
          </div>

          <div class="mt-8 flex items-center justify-center gap-2 text-[11px] text-slate-400">
            <span class="inline-block h-[1px] w-5 bg-slate-600"></span>
            <span class="tracking-wider uppercase">{t("birthday.labels.withLove")}</span>
            <span class="inline-block h-[1px] w-5 bg-slate-600"></span>
          </div>
        </section>
      </div>
    </main>
  </div>
</Layout>

<script>
  import anime from "animejs";

  // Confetti Animation
  function createConfetti() {
    const container = document.getElementById("confetti-container");
    if (!container) return;

    const colors = ["#ff6b6b", "#4ecdc4", "#45b7d1", "#96ceb4", "#feca57", "#ff9ff3", "#54a0ff"];

    for (let i = 0; i < 50; i++) {
      const confetti = document.createElement("div");
      confetti.style.position = "absolute";
      confetti.style.width = "10px";
      confetti.style.height = "10px";
      confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
      confetti.style.left = Math.random() * window.innerWidth + "px";
      confetti.style.top = "-10px";
      confetti.style.borderRadius = "50%";

      container.appendChild(confetti);

      // Animate confetti falling
      anime({
        targets: confetti,
        translateY: window.innerHeight + 100,
        translateX: (Math.random() - 0.5) * 200,
        rotate: Math.random() * 360,
        duration: Math.random() * 3000 + 2000,
        easing: "easeInQuad",
        complete: () => {
          confetti.remove();
        },
      });
    }
  }

  // Create confetti every 2 seconds
  setInterval(createConfetti, 2000);

  // Initial confetti burst
  setTimeout(createConfetti, 500);

  // Handle back to portfolio button
  document.addEventListener("DOMContentLoaded", () => {
    const backButton = document.getElementById("back-to-portfolio");
    if (backButton) {
      backButton.addEventListener("click", () => {
        // Direct navigation without language switching interference
        window.location.href = "/es/";
      });
    }
  });
</script>

<style>
  @keyframes bounce {
    0%,
    20%,
    53%,
    80%,
    100% {
      transform: translate3d(0, 0, 0);
    }
    40%,
    43% {
      transform: translate3d(0, -30px, 0);
    }
    70% {
      transform: translate3d(0, -15px, 0);
    }
    90% {
      transform: translate3d(0, -4px, 0);
    }
  }

  .animate-bounce {
    animation: bounce 2s infinite;
  }

  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
</style>
