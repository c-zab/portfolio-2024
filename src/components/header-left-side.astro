---
import Navbar from "../components/navbar.astro";
---

<header
  class="flex flex-col justify-between h-80 lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-24"
>
  <div>
    <h1
      class="ml11 text-4xl font-bold tracking-tight text-slate-200 sm:text-5xl"
      aria-label="Carlos Zabaleta"
    >
      <span class="text-wrapper" aria-hidden="true">
        <span class="line line1"></span>
        <span class="letters">Carlos Zabaleta</span>
      </span>
    </h1>
    <h2
      class="mt-3 text-lg font-medium tracking-tight text-slate-200 sm:text-xl"
    >
      Senior Frontend Engineer
    </h2>
    <p class="mt-4 max-w-xs leading-normal">
      I build pixel-perfect, engaging, and accessible digital experiences.
    </p>
  </div>
  <Navbar />
</header>

<script>
  import anime from "animejs";

  // Wrap every letter in a span
  var textWrapper = document.querySelector(".ml11 .letters");
  if (textWrapper) {
    textWrapper.innerHTML = (textWrapper.textContent ?? "").replace(
      /([^\x00-\x80]|\w)/g,
      "<span class='letter'>$&</span>"
    );

    anime
      .timeline({
        easing: "easeOutExpo",
        duration: 500,
      })
      .add({
        targets: ".ml11 .line",
        scaleY: [0, 1],
        opacity: [0.5, 1],
        delay: 500,
      })
      .add({
        targets: ".ml11 .line",
        translateX: [0, textWrapper.getBoundingClientRect().width + 10],
        duration: 1000,
      })
      .add(
        {
          targets: ".ml11 .letter",
          opacity: [0, 1],
          duration: 600,
          offset: "-=775",
          delay: (el, i) => 40 * (i + 1),
        },
        "-=900"
      );
  }
  anime({
    targets: ".ml11 .line",
    opacity: [0, 1],
    easing: "linear",
    loop: true,
    duration: 1000,
  });
</script>

<style>
  .ml11 .text-wrapper {
    position: relative;
    display: inline-block;
    padding-top: 0.1em;
    padding-right: 0.05em;
    padding-bottom: 0.15em;
  }

  .ml11 .line {
    opacity: 0;
    position: absolute;
    left: 0;
    height: 100%;
    width: 3px;
    background-color: #fff;
    transform-origin: 0 50%;
  }

  .ml11 .line1 {
    top: 0;
    left: 0;
  }

  .ml11 .letter {
    display: inline-block;
    line-height: 1em;
  }
</style>
