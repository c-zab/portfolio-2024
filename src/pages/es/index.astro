---
import Layout from "../../layouts/Layout.astro";
import HeaderLeftSide from "../../components/header-left-side.astro";
import TechOverlap from "../../components/tech-overlap.astro";
import { getTranslation } from "../../utils/i18n";

const t = (key: string) => getTranslation("es", key);
---

<Layout title={`${t("common.name")} - ${t("common.title")} | ${t("common.location")}`}>
  <div
    class="flex flex-col justify-center mx-auto min-h-screen max-w-screen-xl px-6 py-12 font-sans md:px-12 md:py-20 lg:px-24 lg:py-0"
    itemscope
    itemtype="https://schema.org/Person"
  >
    <div class="flex flex-col lg:flex-row lg:justify-between lg:gap-4 lg:h-[70vh]">
      <div class="py-20 lg:py-0 lg:w-1/2">
        <HeaderLeftSide />
      </div>
      <main class="pt-8 lg:w-1/2 lg:py-0 lg:h-full" role="main">
        <div class="hidden md:block">
          <TechOverlap />
        </div>
      </main>
    </div>
  </div>
</Layout>
